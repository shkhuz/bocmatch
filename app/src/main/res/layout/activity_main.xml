<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottle0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bottle_margin_hor"
            android:layout_marginRight="@dimen/bottle_margin_hor"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/empty_image_border"
            android:src="@drawable/bocmatch_bottle_green" />

        <ImageView
            android:id="@+id/bottle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bottle_margin_hor"
            android:layout_marginRight="@dimen/bottle_margin_hor"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/empty_image_border"
            android:src="@drawable/bocmatch_bottle_green" />

        <ImageView
            android:id="@+id/bottle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bottle_margin_hor"
            android:layout_marginRight="@dimen/bottle_margin_hor"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/empty_image_border"
            android:src="@drawable/bocmatch_bottle_green" />

        <ImageView
            android:id="@+id/bottle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bottle_margin_hor"
            android:layout_marginRight="@dimen/bottle_margin_hor"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/empty_image_border"
            android:src="@drawable/bocmatch_bottle_green" />

        <ImageView
            android:id="@+id/bottle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bottle_margin_hor"
            android:layout_marginRight="@dimen/bottle_margin_hor"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/empty_image_border"
            android:src="@drawable/bocmatch_bottle_green" />

        <ImageView
            android:id="@+id/bottle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bottle_margin_hor"
            android:layout_marginRight="@dimen/bottle_margin_hor"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/empty_image_border"
            android:src="@drawable/bocmatch_bottle_green" />

        <ImageView
            android:id="@+id/bottle6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bottle_margin_hor"
            android:layout_marginRight="@dimen/bottle_margin_hor"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/empty_image_border"
            android:src="@drawable/bocmatch_bottle_green" />

    </LinearLayout>

    <ImageView
        android:id="@+id/platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/wooden_plank" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/match_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/check"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/check_button"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>